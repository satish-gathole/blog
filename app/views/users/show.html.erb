<div class="user_details">

  <aside>
    <section>
      <%= image_tag("default_profile.png") %>
      <p>
        <b>Username:</b>
        <%= @user.username %>
      </p>

      <p>
        <b>Email:</b>
        <%= @user.email %>
      </p>

    </section>

    <section>
      <%= render '/users/shared/stats' %>
    </section>

    <section>
      <%= render :partial =>  '/posts/post_form', :locals => {:hidden_value => true, :submit_class => "btn-primary"} %>
    </section>
  </aside>

    <div class="span1">
      <div class="follow_btn_link">
        <%= render 'follow_form' if not current_user==(@user) %>
        <%= link_to 'All users', users_path %>
      </div>

      <% if @user.posts.any? %>
          <div id="posts_list">
            <%= render "/posts/post_list", :collection => @posts %>
          </div>

      <% end %>
    </div>

</div>