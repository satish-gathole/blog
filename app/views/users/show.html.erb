<div class="user_details">

  <aside>
    <section>
      <%= image_tag("default_profile.png") %>
      <p>
        <b>Username:</b>
        <%= @user.username %>
      </p>

      <p>
        <b>Email:</b>
        <%= @user.email %>
      </p>

    </section>

    <section>
      <%= render '/users/shared/stats' %>
    </section>

    <section>
      <%= render '/posts/post_form' %>
    </section>
  </aside>

    <div class="span1">
      <div class="follow_btn_link">
        <%= render 'follow_form' if not current_user==(@user) %>
        <%= link_to 'All users', users_path %>
      </div>

      <% if @user.posts.any? %>
          <h3>Posts (<%= @user.posts.count %>)</h3>
          <ol class="posts">
            <%= render @posts %>
          </ol>

          <%= will_paginate @posts %>
      <% end %>
    </div>

</div>