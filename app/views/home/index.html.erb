<div class="home">
  <h1>Twitter Test Project</h1>
  <% if @current_user_posts.any? %>

      <div class="posts_box">
          <h3>Posts (<%= @current_user_posts.count %>)</h3>
          <ol class="current_user_posts">
            <%#= render @current_user_posts %>
            <% @current_user_posts.each do |post| %>
                <li>
                  <%= image_tag("default_profile.png", :size=>"60x60" ) %>

                  <div class="post_details">
                    <h3><%= post.user.username %></h3>
                    <span class="content"><%= post.content %></span>
                    <span class="timestamp">
                        Created <%= time_ago_in_words(post.created_at) %> ago.
                    </span>
                    <% if current_user == post.user %>
                        <%= link_to "delete", post, :method => :delete,
                                    :confirm => "You sure?",
                                    :title => post.content %>
                    <% end %>
                  </div>
                </li>
            <% end%>
          </ol>

          <%= will_paginate @current_user_posts %>
      </div>

  <% end %>
</div>
